<Page
    x:Class="input_cleaner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:input_cleaner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel Margin="35">
		<TextBlock Margin="20"  FontSize="30" Foreground="Aqua">Liitä siivottava teksti tähän:</TextBlock>
		<TextBox Margin="20" x:Name="inputti" FontSize="20" TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="paste here"></TextBox>
		<TextBlock Margin="20" x:Name="outputtii" FontSize="20" Foreground="Aqua" TextWrapping="WrapWholeWords" ></TextBlock>
		<Button Margin="20" x:Name="nappi" Click="nappiClicked"  FontSize="30" Width="280" >Korjaa ja kopioi</Button>

	</StackPanel>
</Page>
